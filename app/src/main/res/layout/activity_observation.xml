<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/toolbar_main"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:verticalScrollbarPosition="right">

                    <LinearLayout
                        android:id="@+id/linearLayoutLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageViewMap"
                            android:layout_width="32dp"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/map"
                            android:clickable="true"
                            android:focusable="true"
                            android:paddingTop="2dp"
                            android:layout_gravity="start"
                            android:src="@drawable/ic_gps_turtle"/>

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:columnCount="1">

                            <LinearLayout
                                android:id="@+id/linearLayoutUnknownCoordinates"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/warningRed"
                                    android:text="@string/location_is_not_available"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/linearLayoutCoordinates"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/textViewLatitude"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/unknown" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/north_dot_comma" />

                                <TextView
                                    android:id="@+id/textViewLongitude"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/unknown" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/east" />
                            </LinearLayout>

                            <LinearLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/accuracy" />

                                <TextView
                                    android:id="@+id/textViewAccuracy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="4dp"
                                    android:text="@string/unknown" />

                                <TextView
                                    android:id="@+id/textViewAccuracyMeters"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="4dp"
                                    android:visibility="gone"
                                    android:text="@string/meter" />
                            </LinearLayout>
                        </GridLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayoutDateAndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="0dp"
                        android:visibility="visible"
                        android:layout_gravity="center">

                        <EditText
                            android:id="@+id/editTextDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:autofillHints="@string/select_date"
                            android:hint="@string/select_date"
                            android:focusable="false"
                            android:drawableStart="@drawable/outline_calendar_today_24"
                            android:drawablePadding="8dp"
                            app:drawableTint="@color/colorPrimaryDark"
                            android:cursorVisible="false"
                            android:background="@android:color/transparent"
                            android:textSize="14sp"
                            android:inputType="date" />

                        <EditText
                            android:id="@+id/editTextTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:autofillHints="@string/select_time"
                            android:hint="@string/select_time"
                            android:focusable="false"
                            android:drawableStart="@drawable/clock"
                            android:drawablePadding="8dp"
                            app:drawableTint="@color/colorPrimaryDark"
                            android:paddingStart="16dp"
                            android:paddingEnd="0dp"
                            android:cursorVisible="false"
                            android:background="@android:color/transparent"
                            android:textSize="14sp"
                            android:inputType="time" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/imageViewPhotoFromCamera"
                            android:layout_width="32dp"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/camera"
                            android:clickable="true"
                            android:focusable="true"
                            android:scaleType="fitEnd"
                            android:layout_gravity="start"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/ic_photo_camera" />

                        <ImageView
                            android:id="@+id/imageViewPhotoFromGallery"
                            android:layout_width="32dp"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/gallery"
                            android:clickable="true"
                            android:focusable="true"
                            android:scaleType="fitEnd"
                            android:layout_gravity="start"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_photo_gallery" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:endIconMode="clear_text"
                            style="@style/Widget.AppCompat.DropDownItem.Spinner"
                            app:boxBackgroundColor="@android:color/transparent">

                            <AutoCompleteTextView
                                android:id="@+id/autoCompleteTextViewSpeciesName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/taxon_name_hint"
                                android:maxLength="300"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:paddingTop="28dp"
                                android:paddingBottom="10dp"
                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutAtlasCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundColor="@android:color/transparent"
                        android:visibility="gone">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textInputEditTextAtlasCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_arrow_drop_down"
                            android:clickable="false"
                            android:focusable="false"
                            android:hint="@string/select_atlas_code"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundColor="@android:color/transparent">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textInputEditTextComment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="1000"
                            android:hint="@string/comment_hint"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp" >

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/checkBoxMale"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="@color/checkBox_text"
                                android:textSize="22sp"
                                android:paddingBottom="8dp"
                                android:text="@string/male"/>

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/checkBoxFemale"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="@color/checkBox_text"
                                android:textSize="22sp"
                                android:paddingBottom="4dp"
                                android:text="@string/female"/>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/textInputLayoutSpecimensNo"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                app:boxBackgroundColor="@android:color/transparent">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/textInputEditTextSpecimensNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="@string/specimens_number_hint"
                                    android:inputType="number"
                                    android:maxLength="10" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupObservationTypes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView2">
                        </com.google.android.material.chip.ChipGroup>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayoutStages"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            app:boxBackgroundColor="@android:color/transparent"
                            android:visibility="gone">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/textInputEditTextStages"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_arrow_drop_down"
                                android:clickable="false"
                                android:focusable="false"
                                android:hint="@string/stage_hint"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@android:color/transparent">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/textInputEditTextHabitat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="100"
                                android:hint="@string/habitat"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@android:color/transparent">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextFoundOn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="100"
                                android:hint="@string/found_on"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/materialCheckBoxDead"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="@color/checkBox_text"
                                android:text="@string/specimen_is_dead"/>

                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayoutDeathComment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:boxBackgroundColor="@android:color/transparent">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/textInputEditTextDeathComment"
                                android:layout_width="match_parent"
                                android:maxLength="1000"
                                android:layout_height="wrap_content"
                                android:hint="@string/dead_comment_hint"
                                android:inputType="text"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <FrameLayout
                            android:id="@+id/frameLayoutPicture1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="5dp"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/imageViewPicture1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/image_frame"
                                android:scaleType="centerCrop"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_photo_camera" />
                            <ImageView
                                android:id="@+id/imageViewDeletePicture1"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_margin="4dp"
                                android:contentDescription="@string/image_frame"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_gravity="end"
                                android:src="@drawable/ic_remove_circle_black_24dp" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/frameLayoutPicture2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="5dp"
                            android:visibility="gone">
                            <ImageView
                                android:id="@+id/imageViewPicture2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/image_frame"
                                android:scaleType="centerCrop"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_photo_camera" />
                            <ImageView
                                android:id="@+id/imageViewDeletePicture2"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_margin="4dp"
                                android:contentDescription="@string/image_frame"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_gravity="end"
                                android:src="@drawable/ic_remove_circle_black_24dp" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/frameLayoutPicture3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="5dp"
                            android:visibility="gone">
                            <ImageView
                                android:id="@+id/imageViewPicture3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/image_frame"
                                android:scaleType="centerCrop"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_photo_camera" />
                            <ImageView
                                android:id="@+id/imageViewDeletePicture3"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_margin="4dp"
                                android:contentDescription="@string/image_frame"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_gravity="end"
                                android:src="@drawable/ic_remove_circle_black_24dp" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.drawerlayout.widget.DrawerLayout>