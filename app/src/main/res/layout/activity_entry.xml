<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/swipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:verticalScrollbarPosition="right">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp">

                            <!--levi deo-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="260dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="6dp"
                                    android:gravity="start"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/latitude"/>
                                    <TextView
                                        android:id="@+id/tv_latitude"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingStart="16dp"
                                        android:paddingEnd="0dp"
                                        android:text="@string/unknown" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="260dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="6dp"
                                    android:gravity="start"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/longitude"/>
                                    <TextView
                                        android:id="@+id/tv_longitude"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingStart="16dp"
                                        android:paddingEnd="0dp"
                                        android:text="@string/unknown" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="260dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/GPSaccuracy"/>
                                    <TextView
                                        android:id="@+id/tv_gps"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingStart="16dp"
                                        android:paddingEnd="0dp"
                                        android:text="@string/unknown"/>
                                </LinearLayout>

                            </LinearLayout>

                            <!--desni deo(mapa)-->
                            <ImageView
                                android:id="@+id/iv_map"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="5dp"
                                android:layout_marginStart="16dp"
                                android:contentDescription="@string/map"
                                android:adjustViewBounds="true"
                                android:clickable="true"
                                android:focusable="true"
                                android:src="@drawable/mapicon_192dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:id="@+id/image_view_take_photo_camera"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:contentDescription="@string/camera"
                                android:clickable="true"
                                android:focusable="true"
                                android:scaleType="centerInside"
                                android:layout_gravity="start"
                                android:src="@drawable/ic_photo_camera" />

                            <ImageView
                                android:id="@+id/image_view_take_photo_gallery"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:contentDescription="@string/gallery"
                                android:clickable="true"
                                android:focusable="true"
                                android:scaleType="centerInside"
                                android:layout_gravity="start"
                                android:src="@drawable/ic_photo_gallery" />

                            <AutoCompleteTextView
                                android:id="@+id/textview_list_of_taxa"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/gray_border"
                                android:hint="@string/naziv_taksona"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:maxLength="300"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/detailed_entry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"
                                android:background="@color/colorDivider"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="56dp"
                                    android:orientation="horizontal"
                                    android:padding="5dp">

                                    <org.biologer.biologer.CustomTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginEnd="10dp"
                                        android:text="@string/broj_jedinki" />

                                    <org.biologer.biologer.CustomEditText
                                        android:id="@+id/et_brojJedinki"
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:maxLength="10"
                                        android:gravity="center"
                                        android:inputType="number" />
                                </LinearLayout>


                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="56dp"
                                    android:orientation="horizontal"
                                    android:layout_gravity="end"
                                    android:padding="5dp">

                                    <org.biologer.biologer.CustomTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginEnd="10dp"
                                        android:text="@string/pol" />

                                    <RadioGroup
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <RadioButton
                                            android:id="@+id/rb_musko"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="6dp"
                                            android:text="@string/M" />

                                        <RadioButton
                                            android:id="@+id/rb_zensko"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/Z" />
                                    </RadioGroup>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linear_layout_stages"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="vertical"
                                android:visibility="gone"
                                android:padding="5dp">

                                <org.biologer.biologer.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/razvojni_stadijum">
                                </org.biologer.biologer.CustomTextView>

                                <TextView
                                    android:id="@+id/text_view_stages"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/gray_border"
                                    android:clickable="true"
                                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                                    android:focusable="true"
                                    android:gravity="center_vertical"
                                    android:hint="@string/stage_hint"
                                    android:paddingStart="15dp"
                                    android:paddingEnd="15dp"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <org.biologer.biologer.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/komentar" />

                                <org.biologer.biologer.CustomEditText
                                    android:id="@+id/et_komentar"
                                    android:layout_width="match_parent"
                                    android:maxLength="1000"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="32dp"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <android.support.v7.widget.AppCompatCheckBox
                                    android:id="@+id/dead_specimen"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginEnd="8dp"/>

                                <org.biologer.biologer.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="@string/jedinka_je" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/smrt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <org.biologer.biologer.CustomTextView
                                    android:id="@+id/tv_razlogSmrti"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/razlog_smrti" />

                                <org.biologer.biologer.CustomEditText
                                    android:id="@+id/et_razlogSmrti"
                                    android:layout_width="match_parent"
                                    android:maxLength="1000"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/ib_pic1"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="5dp"
                                android:adjustViewBounds="true"
                                android:contentDescription="@string/image_frame"
                                android:clickable="true"
                                android:focusable="true"
                                android:scaleType="centerInside"
                                android:visibility="gone"
                                android:src="@drawable/ic_add_a_photo_black_24dp" />

                            <ImageView
                                android:id="@+id/ib_pic2"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="5dp"
                                android:adjustViewBounds="true"
                                android:contentDescription="@string/image_frame"
                                android:clickable="true"
                                android:focusable="true"
                                android:scaleType="centerInside"
                                android:visibility="gone"
                                android:src="@drawable/ic_add_a_photo_black_24dp" />

                            <ImageView
                                android:id="@+id/ib_pic3"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:adjustViewBounds="true"
                                android:contentDescription="@string/image_frame"
                                android:clickable="true"
                                android:focusable="true"
                                android:scaleType="centerInside"
                                android:visibility="gone"
                                android:src="@drawable/ic_add_a_photo_black_24dp" />
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>

            </android.support.v4.widget.SwipeRefreshLayout>

        </FrameLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
