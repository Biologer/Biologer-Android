<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:verticalScrollbarPosition="right">

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="2"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:layout_marginTop="4dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="La:"/>
                                <TextView
                                    android:id="@+id/tv_latitude"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="0dp"
                                    android:text="n/a" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="; Lo:"/>
                                <TextView
                                    android:id="@+id/tv_longitude"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="0dp"
                                    android:text="n/a" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="; Prec:"/>
                                <TextView
                                    android:id="@+id/tv_gps"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="0dp"
                                    android:text=""/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" m"/>
                            </LinearLayout>


                            <!--desni deo(mapa)-->
                            <ImageView
                                android:id="@+id/iv_map"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:contentDescription="@string/map"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_gravity="end"
                                android:layout_rowSpan="3"
                                android:layout_columnSpan="1"
                                android:src="@mipmap/ic_map"/>
                        </GridLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/image_view_take_photo_camera"
                                android:layout_width="32dp"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/camera"
                                android:clickable="true"
                                android:focusable="true"
                                android:scaleType="fitEnd"
                                android:layout_gravity="start"
                                android:layout_margin="4dp"
                                android:src="@drawable/ic_photo_camera" />

                            <ImageView
                                android:id="@+id/image_view_take_photo_gallery"
                                android:layout_width="32dp"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/gallery"
                                android:clickable="true"
                                android:focusable="true"
                                android:scaleType="fitEnd"
                                android:layout_gravity="start"
                                android:layout_margin="4dp"
                                android:src="@drawable/ic_photo_gallery" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.AppCompat.DropDownItem.Spinner"
                                app:boxBackgroundColor="@android:color/transparent">

                                <AutoCompleteTextView
                                    android:id="@+id/textview_list_of_taxa"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/naziv_taksona"
                                    android:maxLength="300"
                                    android:paddingStart="12dp"
                                    android:paddingEnd="12dp"
                                    android:paddingTop="28dp"
                                    android:paddingBottom="10dp"
                                    android:textSize="16sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@android:color/transparent">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/text_view_atlas_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_arrow_drop_down"
                                android:clickable="false"
                                android:focusable="false"
                                android:hint="@string/select_atlas_code"
                                android:visibility="gone"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@android:color/transparent">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editText_comment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="1000"
                                android:hint="@string/komentar"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/detailed_entry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="12dp"
                            android:visibility="gone">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <View android:id="@+id/central_line"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_centerHorizontal="true"/>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignEnd="@id/central_line"
                                    android:layout_alignParentStart="true"
                                    app:boxBackgroundColor="@android:color/transparent">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/editText_number_of_specimens"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:hint="@string/broj_jedinki"
                                        android:maxLength="10"
                                        android:layout_marginEnd="6dp"
                                        android:inputType="number" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignStart="@id/central_line"
                                    android:layout_alignParentEnd="true"
                                    app:boxBackgroundColor="@android:color/transparent">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/text_view_sex"
                                        android:layout_width="fill_parent"
                                        android:layout_height="match_parent"
                                        android:drawableEnd="@drawable/ic_arrow_drop_down"
                                        android:clickable="false"
                                        android:focusable="false"
                                        android:layout_marginStart="6dp"
                                        android:hint="@string/select_sex"/>
                                </com.google.android.material.textfield.TextInputLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/both_sexes_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <View android:id="@+id/central_line1"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_centerHorizontal="true"/>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignEnd="@id/central_line1"
                                    android:layout_alignParentStart="true"
                                    app:boxBackgroundColor="@android:color/transparent">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/editText_number_of_males"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="6dp"
                                        android:hint="@string/number_of_males"
                                        android:maxLength="10"
                                        android:layout_marginEnd="6dp"
                                        android:inputType="number" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignStart="@id/central_line1"
                                    android:layout_alignParentEnd="true"
                                    app:boxBackgroundColor="@android:color/transparent">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/editText_number_of_females"
                                        android:layout_width="fill_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="6dp"
                                        android:hint="@string/number_of_females"
                                        android:maxLength="10"
                                        android:layout_marginEnd="6dp"
                                        android:inputType="number" />
                                </com.google.android.material.textfield.TextInputLayout>

                            </RelativeLayout>

                            <com.google.android.material.chip.ChipGroup
                                android:id="@+id/observation_types"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="24dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView2">
                            </com.google.android.material.chip.ChipGroup>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_stages"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                app:boxBackgroundColor="@android:color/transparent"
                                android:visibility="gone">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/text_view_stages"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:hint="@string/stage_hint"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxBackgroundColor="@android:color/transparent">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editText_habitat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLength="100"
                                    android:hint="@string/habitat"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxBackgroundColor="@android:color/transparent">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editText_found_on"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLength="100"
                                    android:hint="@string/found_on"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="32dp"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <com.google.android.material.checkbox.MaterialCheckBox
                                    android:id="@+id/dead_specimen"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginEnd="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="@string/jedinka_je" />

                            </LinearLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxBackgroundColor="@android:color/transparent">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editText_death_comment"
                                    android:layout_width="match_parent"
                                    android:maxLength="1000"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/razlog_smrti"
                                    android:visibility="gone"
                                    android:inputType="text"/>
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <!-- 3 images on the bottom -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <FrameLayout
                                android:id="@+id/ib_pic1_frame"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="5dp"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/ib_pic1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:contentDescription="@string/image_frame"
                                    android:scaleType="centerCrop"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_add_a_photo_black_24dp" />
                                <ImageView
                                    android:id="@+id/ib_pic1_del"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_margin="4dp"
                                    android:contentDescription="@string/image_frame"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:layout_gravity="end"
                                    android:src="@drawable/ic_remove_circle_black_24dp" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/ib_pic2_frame"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="5dp"
                                android:visibility="gone">
                            <ImageView
                                android:id="@+id/ib_pic2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/image_frame"
                                android:scaleType="centerCrop"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_add_a_photo_black_24dp" />
                                <ImageView
                                    android:id="@+id/ib_pic2_del"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_margin="4dp"
                                    android:contentDescription="@string/image_frame"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:layout_gravity="end"
                                    android:src="@drawable/ic_remove_circle_black_24dp" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/ib_pic3_frame"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="5dp"
                                android:visibility="gone">
                            <ImageView
                                android:id="@+id/ib_pic3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/image_frame"
                                android:scaleType="centerCrop"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_add_a_photo_black_24dp" />
                                <ImageView
                                    android:id="@+id/ib_pic3_del"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_margin="4dp"
                                    android:contentDescription="@string/image_frame"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:layout_gravity="end"
                                    android:src="@drawable/ic_remove_circle_black_24dp" />
                            </FrameLayout>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
